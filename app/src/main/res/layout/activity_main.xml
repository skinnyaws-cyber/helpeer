<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:padding="12dp"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bg_panel"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/lblAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RASEED NODE"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgServerStatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/presence_online"
                app:tint="@color/status_offline"
                app:layout_constraintStart_toEndOf="@+id/lblAppTitle"
                app:layout_constraintTop_toTopOf="@+id/lblAppTitle"
                app:layout_constraintBottom_toBottomOf="@+id/lblAppTitle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtBatteryLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="@color/neon_green"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/txtTempLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35Â°C"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/cardHeader">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardBackgroundColor="@color/bg_panel"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUCCESS"
                    android:textSize="10sp"
                    android:textColor="@color/text_hint"/>
                <TextView
                    android:id="@+id/txtSuccessCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/neon_green"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardBackgroundColor="@color/bg_panel"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAILED"
                    android:textSize="10sp"
                    android:textColor="@color/text_hint"/>
                <TextView
                    android:id="@+id/txtFailedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/neon_red"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="2"
        android:rowCount="4" 
        android:alignmentMode="alignMargins"
        app:layout_constraintTop_toBottomOf="@+id/layoutStats">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMaintenance"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="ACTIVE MODE"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/bg_panel"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconTint="@color/neon_green" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPermissions"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="PERMISSIONS"
            android:textSize="11sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/bg_panel"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_manage"
            app:iconTint="@color/text_hint" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimConfig"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="SIM CONFIG"
            android:textSize="11sp"
            android:textColor="@color/text_hint"
            app:backgroundTint="@color/bg_panel"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_call"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTestMode"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="MANUAL TEST"
            android:textSize="11sp"
            android:textColor="@color/text_hint"
            app:backgroundTint="@color/bg_panel"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExportLogs"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_columnSpan="2" 
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="EXPORT SYSTEM LOGS"
            android:textSize="11sp"
            android:textColor="@color/text_hint"
            app:backgroundTint="@color/bg_panel"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmergency"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="EMERGENCY RESTART"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_delete"
            app:iconTint="@color/white" />
            
    </GridLayout>

    <TextView
        android:id="@+id/lblTerminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="> LIVE TERMINAL"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridControls" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTerminal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTerminal">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:background="#000000">

            <TextView
                android:id="@+id/txtConsole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:lineSpacingExtra="3dp"
                android:text="> System initializing..."
                android:textColor="@color/terminal_text"
                android:textSize="12sp" />
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
